doctype html
html
  head
    title= "Real time web chat"
    script(src="/chat.js")
    script(src="/socket.io/socket.io.js")
    link(rel="stylesheet", href="/chat.css")
  body
    #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
    .controls
      | Name:
      if twitter_logged_in
        input#name(style='width:350px;', value="#{twitter_logged_in}", disabled="disabled", readonly="true")
      else
        input#name(style='width:350px;')
      br
      input#field(style='width:350px;')
      input#send(type='button', value='send')
      br
      unless twitter_logged_in
        input#twitter(type='button', class='twitter_button')
